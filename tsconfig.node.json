{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist/node/",
    "sourceMap": true,
    "strict": true,
    "lib": ["es2021", "DOM"],
    "target": "es2021",
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": "src/common",
    "rootDirs": ["src/common", "src/node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@crypto/*": ["lib/crypto/*"]
    }
  },
  "include": ["src/modules.d.ts", "src/common", "src/node"]
}
